{
  "name": "asuna-web",
  "version": "1.1.0",
  "description": "Web for Asuna",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3001",
    "build": "next build",
    "start": "next start -p 3001",
    "format-check": "prettier --check ./**/*.{js,jsx} --ignore-path ../.gitignore",
    "eslint-check": "eslint . --ext .jsx",
    "lint": "yarn format-check && yarn eslint-check"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lauslim12/Asuna.git"
  },
  "author": "Nicholas Dwiarto <nicholasdwiarto@yahoo.com> (https://nicholasdw.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lauslim12/Asuna/issues"
  },
  "homepage": "https://github.com/lauslim12/Asuna#readme",
  "dependencies": {
    "@chakra-ui/react": "^1.8.8",
    "@emotion/react": "^11.9.0",
    "@emotion/styled": "^11.8.1",
    "axios": "^0.27.2",
    "cookies": "^0.8.0",
    "focus-visible": "^5.2.0",
    "framer-motion": "^6.3.3",
    "next": "12.1.5",
    "nprogress": "^0.2.0",
    "prop-types": "^15.8.1",
    "react": "17.0.2",
    "react-datepicker": "^4.7.0",
    "react-dom": "17.0.2",
    "react-icons": "^4.3.1",
    "sass": "^1.51.0"
  },
  "devDependencies": {
    "eslint": "^8.14.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-next": "^12.1.5",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.5.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "prettier": "^2.6.2"
  },
  "eslintConfig": {
    "extends": [
      "airbnb",
      "airbnb/hooks",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "simple-import-sort",
      "prettier"
    ],
    "env": {
      "browser": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {},
        {
          "usePrettierrc": true
        }
      ],
      "simple-import-sort/imports": "error",
      "simple-import-sort/exports": "error",
      "no-underscore-dangle": "off"
    },
    "globals": {
      "React": "writable"
    }
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 100,
    "endOfLine": "auto"
  }
}
